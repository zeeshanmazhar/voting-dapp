{
    "name": "sms-app",
    "version": "1.0.0",
    "log_date_format": "YYYY-MM-DD HH:mm Z",
    "merge_logs": true,
    "private": true,
    "script": "app.js",
    "exec_mode": "cluster",
    "instances": "max",
    "watch": false,
    "ignore_watch": [
        "node_modules",
        "public/uploads",
        ".git",
        ".vscode",
        "public/assets/*",
        "views/*"
    ],
    "watch_options": {
        "usePolling": false,
        "alwaysStat": false,
        "useFsEvents": true
    },
    "env": {
        "BINDIP": "0.0.0.0",
        "PORT": 8082,
        "MONITORING": true
    },
    "dependencies": {
        "async": "^2.6.1",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.18.3",
        "connect-flash": "^0.1.1",
        "connect-mongo": "^2.0.3",
        "cors": "^2.8.5",
        "ejs": "^2.6.1",
        "ethers": "^5.0.24",
        "express": "^4.16.4",
        "express-ip": "^1.0.3",
        "express-messages": "^1.0.1",
        "express-session": "^1.15.6",
        "express-sessions": "^1.0.6",
        "express-validator": "^5.3.0",
        "fs": "0.0.1-security",
        "ganache-cli": "^6.12.1",
        "jstimezonedetect": "^1.0.6",
        "moment": "^2.22.2",
        "moment-timezone": "^0.5.23",
        "mongodb": "^3.1.8",
        "mongoose": "^5.3.8",
        "mongoose-unique-validator": "^2.0.2",
        "multer": "^1.4.1",
        "ngrok": "^3.1.0",
        "node-cron": "^2.0.3",
        "node-gyp": "^3.8.0",
        "node-pre-gyp": "^0.11.0",
        "node-rest-client": "^3.1.0",
        "nodemailer": "^4.7.0",
        "nodemailer-smtp-transport": "^2.7.4",
        "nodemon": "^1.18.5",
        "passport": "^0.4.0",
        "passport-custom": "^1.0.5",
        "passport-local": "^1.0.0",
        "passport-one-session-per-user": "^1.0.3",
        "path": "^0.12.7",
        "router-express": "^1.5.2",
        "satoshi-bitcoin": "^1.0.4",
        "solc": "^0.5.3",
        "twilio": "^3.39.4",
        "xoauth2": "^1.2.0"
    }
}
