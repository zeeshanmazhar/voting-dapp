<% include ../partials/head.ejs %>
<% include ../partials/header.ejs %>
<link href="/../../../cms/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">All Ballots</h6>
    </div>
    <div class="card-body">
            <%- messages('message', locals) %>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Ballot Title</th>
                      <th>Status</th>
                      <th>Contract Address</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>#</th>
                      <th>Ballot Title</th>
                      <th>Status</th>
                      <th>Contract Address</th>
                      <th>Action</th>
                    </tr>
                  </tfoot>
                  <tbody>

                    <% ballots.forEach((element, key) => { %>
                        <tr>
                            <td><%- key+1  %></td>
                            <td><%- element.title  %></td>
                            <td><%-  element.status  %></td>
                            <td><%-  element.address  %></td>
                            <td>
                              <div class="btn-group" role="group">
                                <% if(element.status == 'active'){ %>
                                <a href="/ballot/change_status/deactive/<%- element._id  %>" class="btn btn-sm btn-danger">Deactivate</a>
                                <% }else{ %>
                                <a href="/ballot/change_status/active/<%- element._id  %>" class="btn btn-sm btn-success">Activate</a>
                                <% } if(true){ %>
                                <a href="/ballot/compile/<%- element._id%>" class="btn btn-sm btn-primary">Deploy Contract</a>
                                <% } %>
                              </div>
                            </td>
                          </tr>
                        <% }); %>
                   
                  </tbody>
                </table>
              </div>

    </div>
  </div>

  <% include ../partials/footer.ejs %>
  
    <!-- Page level plugins -->
    <script src="/../../../cms/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/../../../cms/vendor/datatables/dataTables.bootstrap4.min.js"></script>
  
      <!-- Page level custom scripts -->
      <script src="/../../../cms/js/demo/datatables-demo.js"></script>
</body>

</html>
