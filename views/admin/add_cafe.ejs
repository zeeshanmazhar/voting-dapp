<% include ../partials/head.ejs %>
<% include ../partials/header.ejs %>

<div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Add Users</h6>
    </div>
    <div class="card-body">
            <%- messages('message', locals) %>
            <div class="row">
                <div class="col-md-8">
                  <form method="POST" action="/admin/contacts/add">
                        <div class="form-group row">
                          <label for="inputEmail3" class="col-sm-2 col-form-label">Names</label>
                          <div class="col-sm-10">
                            <textarea type="text" class="form-control" name="names" placeholder="Names"></textarea>
                          </div>
                        </div>
                        
                        <div class="form-group row">
                          <label for="inputEmail3" class="col-sm-2 col-form-label">Contact#</label>
                          <div class="col-sm-10">
                            <textarea type="text" class="form-control" name="numbers" placeholder="Contact#"></textarea>
                          </div>
                        </div>

                        <div class="form-group row">
                          <label for="inputEmail3" class="col-sm-2 col-form-label">Emails</label>
                          <div class="col-sm-10">
                            <textarea type="text" class="form-control" name="emails" placeholder="Emails"></textarea>
                          </div>
                        </div>

                    <div class="form-group row">
                      <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </div>
                    </div>

                  </form>
  
                </div>
              </div>
    </div>
  </div>

  <% include ../partials/footer.ejs %>
    <script>
        $(document).ready(function() {
            $('#pcat').on('change', function() {
               
                console.log($('#pcat').val());
                
                $.post("/admin/menu/get_childs",{
                        parent:$('#pcat').val() 
                    },
                    function(_data, status){
                        console.log(_data , "\nStatus: " + status);
                            target = $('#childs');
                            $(target).empty();
                        $('<option value="">-- Select Child Category --</option>').appendTo(target);
                        if (_data.childs.length > 0 ) {
                            if(typeof(_data.childs) != "undefined"){
                                        _data.childs.forEach(element => {                                            
                                            $('<option value="' + element._id + '">' + element.title + '</option>').appendTo(target);
                                        });
                                    }
                            }
                    });
            });
        });
    </script>
  
</body>

</html>
