    
<% include ../partials/head.ejs %>

            
<% include ../partials/header.ejs %>

           	<!-- begin::Body -->
               <div class="m-grid__item m-grid__item--fluid  m-grid m-grid--ver-desktop m-grid--desktop m-page__container m-body">
                <div class="m-grid__item m-grid__item--fluid m-wrapper">

                    <div class="container">
						<div class="row">
                            <div class="col-lg-2"></div>
							<div class="col-lg-8">

                                <!--begin::Portlet-->
								<div class="m-portlet">
										<%- messages('message', locals) %>
									<!--begin::Form-->
									
                                        <div class="m-portlet__body">
											<div class="form-group m-form__group row">
												<label class="col-lg-3 col-form-label">Total:</label>
												<div class="col-lg-7">
													<div class="input-group">
                                                        <input autocomplete="off" type="text" class="form-control m-input" name="total" value="<%= request.total  %>" disabled>
                                                    </div>
												</div>
											</div>
											<div class="form-group m-form__group row">
                                                    <label class="col-lg-3 col-form-label">Amount:</label>
                                                    <div class="col-lg-7">
                                                        <div class="input-group">
                                                            <input autocomplete="off" type="text" class="form-control m-input" name="amount" value="<%= request.amount %>" disabled>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group m-form__group row">
                                                        <label class="col-lg-3 col-form-label">Commision:</label>
                                                        <div class="col-lg-7">
                                                            <div class="input-group">
                                                                <input autocomplete="off" type="text" class="form-control m-input" name="com" value="<%= request.com  %>" disabled>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group m-form__group row">
                                                            <label class="col-lg-3 col-form-label">BTC:</label>
                                                            <div class="col-lg-7">
                                                                <div class="input-group">
                                                                    <input autocomplete="off" type="text" class="form-control m-input" name="btc" value="<%= request.btc  %>" disabled>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group m-form__group row">
                                                                <label class="col-lg-3 col-form-label">Total:</label>
                                                                <div class="col-lg-7">
                                                                    <div class="input-group">
                                                                        <input autocomplete="off" type="text" class="form-control m-input" name="total" value="<%= request.total  %>" disabled>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="form-group m-form__group row">
                                                                <label class="col-lg-3 col-form-label">Blockchain Address:</label>
                                                                <div class="col-lg-7">
                                                                    <div class="input-group">
                                                                        <input autocomplete="off" id="btcaddress" type="text" class="form-control m-input" name="total" value="<%= request.address  %>" disabled>
                                                                    </div><br>
                                                                    <img id="btc_img" width="50%" src=""><br>
                                                                    <iframe src="https://live.blockcypher.com/widget/btc/<%= request.address %>/balance/" style="overflow:hidden; width:100%" frameborder="0"></iframe>

                                                                </div>
                                                            </div>
                                                            
                                                                <div class="form-group m-form__group row">
                                                                    <label class="col-lg-3 col-form-label">Status:</label>
                                                                    <div class="col-lg-7">
                                                                        <div class="input-group">
                                                                            <select class="form-control m-input" disabled>
                                                                                <option value="pay"><%= request.status %></option>
                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            <div class="form-group m-form__group row">
                                                                <label class="col-lg-3 col-form-label">Comment:</label>
                                                                <div class="col-lg-7">
                                                                    <div class="input-group">
                                                                        <input autocomplete="off" type="text" class="form-control m-input" value="<%= request.reference %>" disabled>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                         
										
									<!--end::Form-->
								</div>
								<!--end::Portlet-->
                            </div>
                            <div class="col-lg-2">                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                              
                            </div>
						</div>
					</div>
				</div>
            </div>
           
			<!-- end:: Body -->
<% include ../partials/footer.ejs %>  
<script>


	$(document).ready(function() {
       
        btcaddress = $("#btcaddress").val();
        toImg = "https://chart.googleapis.com/chart?chs=250x250&cht=qr&chl=bitcoin:"+btcaddress;
          $('#btc_img').attr('src',toImg);
	});
</script>

<script>
        $(document).ready(function() {
            $("#wallet-menu").addClass('m-menu__item--active  m-menu__item--active-tab');
        });
    </script>

